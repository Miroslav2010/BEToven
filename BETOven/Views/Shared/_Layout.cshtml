<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .selektorce:hover{
            cursor: pointer;
        }
        .selektorce{
            width: 40px;
            text-align:center;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#d2d2d2!important;border:0px!important">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="color:black">
                    <li><a href="@Url.Action("Index","Bilten")">
    <img src="@Url.Content("~/BEToven.png")" height="25px" width="80px" alt="Home" />
</a></li>
                    <li>@Html.ActionLink("Home(Bilten)", "Index", "Bilten",null, new { @style = "color:black;" })</li>
                    <li>@Html.ActionLink("My Tickets", "Index", "Tickets",null, new { @style = "color:black;" })</li>
                    <li>@Html.ActionLink("Add User to Role", "AddToRole","Account",null, new { @style = "color:black;" })</li>    
                </ul>
                @Html.Partial("_LoginPartial")
                @Html.Partial("_FundsPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BEToven&trade;</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
    @if (Request.IsAuthenticated)
    {
        <script type="text/javascript">
            $(function() {
                $.ajax({
                    url: '/Account/Funds',
                    success: function(data) {
                        $("#renderbody").text(data);
                    }
                });
            });
        </script>
    }
    </body>
</html>
